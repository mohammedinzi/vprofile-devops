Vagrant.configure("2") do |config|
  # ---------------------------------------------------
  # Global Config
  # ---------------------------------------------------
  # Enable hostmanager plugin to auto-manage /etc/hosts
  config.hostmanager.enabled = true
  config.hostmanager.manage_host = true

  # ---------------------------------------------------
  # Database VM (db01)
  # ---------------------------------------------------
  config.vm.define "db01" do |db01|
    db01.vm.box = "centos/stream9"                        # Base image
    db01.vm.hostname = "db01"                             # Internal hostname
    db01.vm.network "private_network", ip: "192.168.56.15" # Private IP for internal comms
    db01.vm.provider "virtualbox" do |vb|
      vb.memory = "600"                                   # Allocate 600 MB RAM
    end
    db01.vm.provision "shell", path: "mysql.sh"           # Provision DB setup script
  end

  # ---------------------------------------------------
  # Memcache VM (mc01)
  # ---------------------------------------------------
  config.vm.define "mc01" do |mc01|
    mc01.vm.box = "centos/stream9"
    mc01.vm.hostname = "mc01"
    mc01.vm.network "private_network", ip: "192.168.56.14"
    mc01.vm.provider "virtualbox" do |vb|
      vb.memory = "600"
    end
    mc01.vm.provision "shell", path: "memcache.sh"        # Provision cache setup script
  end

  # ---------------------------------------------------
  # RabbitMQ VM (rmq01)
  # ---------------------------------------------------
  config.vm.define "rmq01" do |rmq01|
    rmq01.vm.box = "centos/stream9"
    rmq01.vm.hostname = "rmq01"
    rmq01.vm.network "private_network", ip: "192.168.56.16"
    rmq01.vm.provider "virtualbox" do |vb|
      vb.memory = "600"
    end
    rmq01.vm.provision "shell", path: "rabbitmq.sh"       # Provision message queue setup
  end

  # ---------------------------------------------------
  # Application VM (app01) - Tomcat
  # ---------------------------------------------------
  config.vm.define "app01" do |app01|
    app01.vm.box = "centos/stream9"
    app01.vm.hostname = "app01"
    app01.vm.network "private_network", ip: "192.168.56.12"
    app01.vm.provision "shell", path: "tomcat.sh"         # Provision Tomcat + deploy app
    app01.vm.provider "virtualbox" do |vb|
      vb.memory = "800"                                   # Slightly more RAM for Tomcat
    end
  end

  # ---------------------------------------------------
  # Web VM (web01) - Nginx Load Balancer
  # ---------------------------------------------------
  config.vm.define "web01" do |web01|
    web01.vm.box = "ubuntu/jammy64"                       # Ubuntu base for Nginx
    web01.vm.hostname = "web01"
    web01.vm.network "private_network", ip: "192.168.56.11"
    # web01.vm.network "public_network"                   # Optional: expose to outside world
    web01.vm.provider "virtualbox" do |vb|
      vb.gui = true                                       # GUI enabled for debugging
      vb.memory = "800"
    end
    web01.vm.provision "shell", path: "nginx.sh"          # Provision reverse proxy config
  end
end
# Note: Use 'vagrant up --provider virtualbox' to launch VMs with VirtualBox
# ================================
# üìå Vprofile Project - Vagrantfile
# Infrastructure as Code (IaC) Demo
#
# This Vagrantfile provisions a **multi-VM 3-tier architecture**
# for the Vprofile Java web application.
#
# Purpose of comments:  
#   ‚ûù To make setup self-explanatory for new contributors.  
#   ‚ûù Each VM is role-based (DB, Cache, MQ, App, Web).  
#   ‚ûù Mirrors production-style 3-tier environments for learning.  
#
# VM Topology:
#   web01 ‚Üí Nginx (192.168.56.11)
#   app01 ‚Üí Tomcat (192.168.56.12)
#   rmq01 ‚Üí RabbitMQ (192.168.56.13)
#   mc01  ‚Üí Memcache (192.168.56.14)
#   db01  ‚Üí MySQL/MariaDB (192.168.56.15)
# ================================

Vagrant.configure("2") do |config|
  # Hostmanager keeps /etc/hosts consistent across VMs
  config.hostmanager.enabled = true 
  config.hostmanager.manage_host = true
  
  # -------------------------------
  # üóÑÔ∏è Database VM (db01)
  # Runs MariaDB/MySQL ‚Üí persistent storage for application data
  # -------------------------------
  config.vm.define "db01" do |db01|
    db01.vm.box = "centos/stream9"
    db01.vm.hostname = "db01"
    db01.vm.network "private_network", ip: "192.168.56.15"

    db01.vm.provider "virtualbox" do |vb|
      vb.memory = "600"    # Light memory footprint
    end
  end
  
  # -------------------------------
  # ‚ö° Memcache VM (mc01)
  # Provides in-memory caching ‚Üí accelerates DB reads
  # -------------------------------
  config.vm.define "mc01" do |mc01|
    mc01.vm.box = "centos/stream9"
    mc01.vm.hostname = "mc01"
    mc01.vm.network "private_network", ip: "192.168.56.14"

    mc01.vm.provider "virtualbox" do |vb|
      vb.memory = "600"
    end
  end
  
  # -------------------------------
  # üì¨ RabbitMQ VM (rmq01)
  # Message broker ‚Üí enables async messaging between services
  # -------------------------------
  config.vm.define "rmq01" do |rmq01|
    rmq01.vm.box = "centos/stream9"
    rmq01.vm.hostname = "rmq01"
    rmq01.vm.network "private_network", ip: "192.168.56.13"

    rmq01.vm.provider "virtualbox" do |vb|
      vb.memory = "600"
    end
  end
  
  # -------------------------------
  # üñ•Ô∏è Application VM (app01)
  # Runs Tomcat + Java backend ‚Üí core business logic
  # -------------------------------
  config.vm.define "app01" do |app01|
    app01.vm.box = "centos/stream9"
    app01.vm.hostname = "app01"
    app01.vm.network "private_network", ip: "192.168.56.12"

    app01.vm.provider "virtualbox" do |vb|
      vb.memory = "800"    # Slightly higher for builds
    end
  end
   
  # -------------------------------
  # üåç Web VM (web01)
  # Nginx reverse proxy ‚Üí user entry point into the stack
  # -------------------------------
  config.vm.define "web01" do |web01|
    web01.vm.box = "ubuntu/jammy64"
    web01.vm.hostname = "web01"
    web01.vm.network "private_network", ip: "192.168.56.11"
    # Optionally expose via public network:
    # web01.vm.network "public_network"

    web01.vm.provider "virtualbox" do |vb|
      vb.gui = true        # GUI mode for debugging/training
      vb.memory = "800"
    end
  end
end

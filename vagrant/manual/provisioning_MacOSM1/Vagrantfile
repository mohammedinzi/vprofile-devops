# ================================
# üìå Vprofile Project - Vagrantfile
# Infrastructure as Code (IaC) Demo
#
# This Vagrantfile provisions a **multi-VM 3-tier architecture**
# for the Vprofile Java web application.
#
# Why annotated?  
#   ‚ûù To make onboarding easy for engineers reviewing this repo.  
#   ‚ûù Each VM has a dedicated role (DB, Cache, MQ, App, Web), 
#      just like in real-world microservices or 3-tier setups.  
#   ‚ûù Clear comments help anyone understand the flow at a glance.  
# ================================

Vagrant.configure("2") do |config|
  # Hostmanager plugin keeps /etc/hosts synced across VMs
  config.hostmanager.enabled = true 
  config.hostmanager.manage_host = true

  # -------------------------------
  # üóÑÔ∏è Database VM (db01)
  # Runs MariaDB/MySQL ‚Üí stores user & app data
  # -------------------------------
  config.vm.define "db01" do |db01|
    db01.vm.box = "bandit145/centos_stream9_arm"
    db01.vm.hostname = "db01"
    db01.vm.network "private_network", ip: "192.168.56.25"

    db01.vm.provider "vmware_desktop" do |vmware|
      vmware.gui = true                    # GUI enabled for visibility
      vmware.allowlist_verified = true     # VMware trust check
    end
  end

  # -------------------------------
  # ‚ö° Memcache VM (mc01)
  # Provides in-memory caching ‚Üí reduces DB load, speeds up app
  # -------------------------------
  config.vm.define "mc01" do |mc01|
    mc01.vm.box = "bandit145/centos_stream9_arm"
    mc01.vm.hostname = "mc01"
    mc01.vm.network "private_network", ip: "192.168.56.24"

    mc01.vm.provider "vmware_desktop" do |vmware|
      vmware.gui = true
      vmware.allowlist_verified = true
    end
  end

  # -------------------------------
  # üì¨ RabbitMQ VM (rmq01)
  # Acts as a message broker ‚Üí enables async communication
  # -------------------------------
  config.vm.define "rmq01" do |rmq01|
    rmq01.vm.box = "bandit145/centos_stream9_arm"
    rmq01.vm.hostname = "rmq01"
    rmq01.vm.network "private_network", ip: "192.168.56.23"

    rmq01.vm.provider "vmware_desktop" do |vmware|
      vmware.gui = true
      vmware.allowlist_verified = true
    end
  end

  # -------------------------------
  # üñ•Ô∏è Application VM (app01)
  # Runs Tomcat + Java + Maven ‚Üí core backend logic
  # -------------------------------
  config.vm.define "app01" do |app01|
    app01.vm.box = "bandit145/centos_stream9_arm"
    app01.vm.hostname = "app01"
    app01.vm.network "private_network", ip: "192.168.56.22"

    app01.vm.provider "vmware_desktop" do |vb|
      vb.memory = "1024"                   # Extra memory for app builds
      vb.gui = true
      vb.allowlist_verified = true
    end
  end

  # -------------------------------
  # üåç Web VM (web01)
  # Runs Nginx ‚Üí reverse proxy & entry point for users
  # -------------------------------
  config.vm.define "web01" do |web01|
    web01.vm.box = "spox/ubuntu-arm"
    web01.vm.hostname = "web01"
    web01.vm.network "private_network", ip: "192.168.56.21"

    web01.vm.provider "vmware_desktop" do |vmware|
      vmware.gui = true
      vmware.allowlist_verified = true
    end
  end
end
